@model IEnumerable<Readz.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<div class="container pt-5">
    <h1>Tags:</h1>

    <p>
        <a type="button" class="btn" asp-action="Create">Create New Tag</a>
        
    </p>
    <table class="table content">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @Html.HiddenFor(model =>item.Id)
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn" })*@
                        <a class ="btn" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn" title="Delete"
                           onclick="return confirm('Are you sure you wish to delete the tag ' + @item.Name + '?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
